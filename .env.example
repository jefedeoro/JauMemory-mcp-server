# JauAuth MCP Server Configuration

# Production API Configuration
JAUMEMORY_API_URL=https://mem.jau.app
JAUMEMORY_GRPC_URL=mem.jau.app:50051

# Authentication
# Option 1: Use existing auth from web login
JAUMEMORY_AUTH_HASH=your_auth_hash_here

# Option 2: Initial setup credentials (one-time use)
JAUMEMORY_USERNAME=your_username
JAUMEMORY_PASSWORD=your_password
JAUMEMORY_EMAIL=your_email@example.com

# MCP Server Configuration
MCP_SERVER_NAME=jauauth
MCP_SERVER_VERSION=1.0.0

# Logging
LOG_LEVEL=info
NODE_ENV=production

# Optional: Frontend URL for approval flow
JAUMEMORY_FRONTEND_URL=https://mem.jau.app